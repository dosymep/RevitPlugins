<Page x:Class="RevitPylonReinforcement.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RevitPylonReinforcement.Views"
      xmlns:vms="clr-namespace:RevitPylonReinforcement.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingsPage"
      
      d:DataContext="{d:DesignInstance vms:SettingsPageViewModel, IsDesignTimeCreatable=False}">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="{Binding Path=SomeText}"
                   FontSize="18"
                   
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>


        <Button
            Grid.Row="1"
            Margin="10"
            Width="80"
            Content="ОК"
            Command="{Binding AcceptViewCommand}"/>
    </Grid>
</Page>
